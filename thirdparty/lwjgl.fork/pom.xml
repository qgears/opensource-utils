<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>hu.qgears</groupId>
		<artifactId>opensource-utils-parent</artifactId>
		<version>12.1.3-SNAPSHOT</version>
		<relativePath>../../build/opensource-utils-parent/</relativePath>
	</parent>

	<artifactId>lwjgl.fork</artifactId>
	<packaging>jar</packaging>
	<description>Java OpenGL bindings implementation library.</description>
	<licenses>
		<license>
			<name> Custom LWJG license</name>
			<url>http://legacy.lwjgl.org/license.php.html</url>
		</license>
	</licenses>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/classes</directory>
			</resource>
		</resources>

		<plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-dependency-plugin</artifactId>
			<version>2.8</version>
			<executions>
				<execution>
					<id>build-classpath</id>
					<phase>generate-sources</phase>
					<goals>
						<goal>build-classpath</goal>
					</goals>
					<configuration>
						<!-- configure the plugin here -->
						<outputProperty>lwjgl.build.cp</outputProperty>
					</configuration>
				</execution>
			</executions>
		</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>hu.qgears</groupId>
			<artifactId>hu.qgears.nativeloader</artifactId>
			<version>${internal-dep-version}</version>
		</dependency>
	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.11.3</version>
				<configuration>
				<!-- Hacky workaround for overriding the Java classpath for javadoc. We add
					the src/main/classes directory to classpath
				so javadoc can resolve the LWJGL classes properly. 
				-->
					<additionalOptions>-classpath ${project.basedir}/src/main/classes:${lwjgl.build.cp}</additionalOptions>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

</project>