<?xml version="1.0" encoding="UTF-8"?>
<natives-def>
	<platform name="Linux">
		<platform arch="(amd|x86_)64">
			<lib path="libqglut64.so"
			installPath="/opt/qgears/libqglut64.so" />
		</platform>
		<platform arch="(i386)">
			<lib path="libqglut.so" 
				installPath="/opt/qgears/libqglut.so" />
		</platform>
	</platform>
	<platform name=".*(W|w)in.*">
		<platform arch="(amd|x86_)64">
			<lib path="w64/freeglut.dll" installPath="C:\opt\qgears\w64\freeglut.dll" />
			<lib path="w64/glew32.dll" installPath="C:\opt\qgears\w64\glew32.dll" />
			<lib path="w64/libqglut64.dll"  installPath="C:\opt\qgears\w64\libqglut64.dll"/>
		</platform>
		<platform arch="(i386)">
			<lib path="w32/freeglut.dll" installPath="C:\opt\qgears\w32\freeglut.dll" />
			<lib path="w32/glew32.dll" installPath="C:\opt\qgears\w32\glew32.dll" />
			<lib path="w32/libqglut32.dll" installPath="C:\opt\qgears\w32\libqglut32.dll"/>
		</platform>
	</platform>
</natives-def>
