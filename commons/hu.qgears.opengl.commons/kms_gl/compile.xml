<project name="generate" default="make-c" basedir=".">
	<description>
		Compile native library.
		Dependencies:
	</description>
	<target name="make-c" depends="jnigen">
		<exec dir="./" executable="make"/>
	</target>
	<target name="jnigen">
		<mkdir dir="generated"/>
		<javah class="hu.qgears.opengl.kmsgl.KMSGLNative"
			classpath="../bin"
			destdir="./generated"
			/>
	</target>
</project>
